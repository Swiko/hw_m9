<Window x:Class="hw_m9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hw_m9"
        mc:Ignorable="d"
        Title="MainWindow" Height="300 " Width="500">

    <Grid Margin="0,10,0,10" ShowGridLines="True" HorizontalAlignment="Center" Width="477">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Margin="10,10,300,10">
            <TextBlock Width="Auto" Height="Auto" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">Input your sentence</TextBlock>
            <TextBox x:Name="TextBox_Task1" Height="100" Margin="10" TextWrapping="Wrap" />
            <Button x:Name="Expand" Height="Auto" Margin="10" Content="Expand sentence" Click="Button_Click"/>
        </StackPanel>

        <ListBox x:Name="Result" Grid.Row="1" Margin="220,10,10,10" />

        <Label Grid.Row="0" Margin="5" HorizontalContentAlignment="Center">Expander .t1</Label>


        
    </Grid>
</Window>
